{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node", "express", "@clerk/clerk-sdk-node"],
        "rootDir": ".",
        "outDir": "./dist",
        "baseUrl": ".",
    },
    "include": [
        "**/*",
        "**/*.json"
    ]
}